pipeline {
    agent any

    stages {
        stage('Clean') {
            steps {
                dir('angular') {
                    script {
                        bat 'npm cache clean --force'
                    }
                }
            }
        }
        stage('Install') {
            steps {
                dir('angular') {
                    script {
                        // Cài đặt các dependencies
                        bat 'npm install --package-lock-only --legacy-peer-deps --ignore-scripts'
                    }
                }
            }
        }

        stage('Build') {
            steps {
                dir('angular') {
                    script {
                        //bat 'echo "run build"'
                        bat 'ng build --configuration development'
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished'
            emailext body: 'Run pipeline Fail', subject: 'Pipeline commitcode.pro.vn', to: 'tienlee.lvt@gmail.com'
        }
        success {
            echo 'SUCCESS'
        }
        failure {
            echo 'FAILED'
        }
    }
}
