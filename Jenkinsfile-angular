pipeline {
    agent any

    stages {
        stage('Install') {
            steps {
                dir('angular') {
                    script {
                        // Cài đặt các dependencies
                        //bat 'echo "clean cache"'
                        bat 'npm cache clean --force'
                        //bat 'echo "install dependencies"'
                        bat 'npm install --package-lock-only --legacy-peer-deps --ignore-scripts'
                    }
                }
            }
        }

        stage('Build Angular App') {
            steps {
                dir('angular') {
                    script {
                        //bat 'echo "run build"'
                        bat 'npm run start'
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished'
            emailext body: 'Run pipeline Fail', subject: 'Pipeline commitcode.pro.vn', to: 'tienlee.lvt@gmail.com'
        }
        success {
            echo 'Pipeline succeeded'
        }
        failure {
            echo 'Pipeline failed'
        }
    }
}
